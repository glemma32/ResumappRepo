							pstmt.setString(1, dg);
							pstmt.setString(2, mj);
							pstmt.setString(3, un);	
							pstmt.setString(4, yg);	
					System.out.println("Do you want to add more, Yes/No ?");
					Scanner Input = new Scanner(System.in);
